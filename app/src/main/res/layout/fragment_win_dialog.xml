<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginHorizontal="@dimen/_15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/popupYouWin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15dp"
        android:background="@drawable/frame_2085660249"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_margin="@dimen/_5dp"
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_24dp"
            android:src="@drawable/x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_n_21_round_1"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView2"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_win"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            tools:ignore="MissingConstraints" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clStarHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv2"
            tools:ignore="MissingConstraints">
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_5dp"
                android:id="@+id/ivStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star"/>
            <TextView
                android:fontFamily="@font/agrandir"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_3dp"
                android:id="@+id/tvStar"
                android:layout_marginStart="@dimen/_4dp"
                app:layout_constraintStart_toEndOf="@id/ivStar"
                android:text="4/8 balls"
                android:textSize="@dimen/_14sp"
                android:textColor="#F8FAFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginStart="@dimen/_10dp"
                app:layout_constraintStart_toEndOf="@id/tvStar"
                android:id="@+id/ivHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart"/>
            <TextView
                android:fontFamily="@font/agrandir"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_3dp"
                android:textSize="@dimen/_14sp"
                android:id="@+id/tvHeart"
                android:layout_marginStart="@dimen/_4dp"
                app:layout_constraintStart_toEndOf="@id/ivHeart"
                android:text="4 lifes"
                android:textColor="#F8FAFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_3dp"
                android:textSize="@dimen/_14sp"
                android:id="@+id/tvCount"
                android:layout_marginStart="@dimen/_54dp"
                app:layout_constraintStart_toEndOf="@id/tvHeart"
                android:text="126"
                android:textColor="#88FFC6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/agrandir"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_3dp"
                android:textSize="@dimen/_14sp"
                android:id="@+id/tvPlayers1"
                android:layout_marginStart="@dimen/_4dp"
                app:layout_constraintStart_toEndOf="@id/tvCount"
                android:text="@string/players"
                android:textColor="#F8FAFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clStarHeart"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_width="@dimen/_290dp"
            android:layout_height="@dimen/_310dp">
            <FrameLayout
                android:id="@+id/frames11"
                android:background="@drawable/game"
                android:layout_width="@dimen/_290dp"
                android:layout_height="@dimen/_310dp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:id="@+id/ivGuns11"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_290dp"
                    android:layout_height="@dimen/_275dp"
                    android:src="@drawable/avtomat6"/>
                <TextView
                    android:textStyle="bold"
                    android:paddingVertical="@dimen/_3dp"
                    android:paddingHorizontal="@dimen/_25dp"
                    android:background="@drawable/text_bg"
                    android:textSize="@dimen/_27sp"
                    android:textColor="#F8FAFF"
                    android:layout_marginBottom="@dimen/_13dp"
                    android:text="@string/lorem_ipsum_dolor"
                    android:layout_gravity="bottom|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <TextView
                android:layout_marginTop="@dimen/_12dp"
                app:layout_constraintTop_toTopOf="@id/frames11"
                app:layout_constraintEnd_toEndOf="@id/frames11"
                app:layout_constraintStart_toStartOf="@id/frames11"
                android:id="@+id/tvPlayers11"
                android:textSize="@dimen/_16sp"
                android:textColor="#F8FAFF"
                android:text="@string/_24_players_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <FrameLayout
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintTop_toBottomOf="@id/frameLayout"
            android:id="@+id/frameLayout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            tools:ignore="MissingConstraints">
            <View
                android:layout_width="@dimen/_400dp"
                android:layout_height="@dimen/_1dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_purple_drawable_30dp_radius"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNextRound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="start|center"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp"/>
            <TextView
                android:fontFamily="@font/agrandir"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_gravity="center|start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00h : 03m : 12s"/>
            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_gravity="center|end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next_round_starts"/>
        </FrameLayout>
        <FrameLayout
            app:layout_constraintTop_toBottomOf="@id/frameLayout1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/frameLayout2"
            android:layout_marginBottom="@dimen/_15dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            tools:ignore="MissingConstraints">
            <View
                android:layout_width="@dimen/_400dp"
                android:layout_height="@dimen/_1dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_black_30dp_radius_background"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGetStarted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="#F8FAFF"
                android:textSize="@dimen/_16sp"
                android:text="@string/go_to_home_page"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>