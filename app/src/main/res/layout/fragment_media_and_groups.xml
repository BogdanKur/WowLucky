<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/_16dp"
    tools:context=".profile.MediaAndGroupsFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_marginTop="@dimen/_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Media &amp; groups"
        android:textColor="#F8FAFF"
        android:textSize="@dimen/_26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingVertical="@dimen/_10dp"
        android:id="@+id/discord"
        android:layout_marginTop="@dimen/_30dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ivDiscord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/discord"/>
        <TextView
            app:layout_constraintStart_toEndOf="@id/ivDiscord"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discord"
            android:textColor="#FAFBFB"
            android:textSize="@dimen/_20sp"/>
        <ImageView
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingVertical="@dimen/_10dp"
        android:id="@+id/youtube"
        android:layout_marginTop="@dimen/_4dp"
        app:layout_constraintTop_toBottomOf="@id/discord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ivYoutube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/youtube"/>
        <TextView
            app:layout_constraintStart_toEndOf="@id/ivYoutube"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Youtube"
            android:textColor="#FAFBFB"
            android:textSize="@dimen/_20sp"/>
        <ImageView
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingVertical="@dimen/_10dp"
        android:id="@+id/telegram"
        android:layout_marginTop="@dimen/_4dp"
        app:layout_constraintTop_toBottomOf="@id/youtube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ivTelegram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/telegram"/>
        <TextView
            app:layout_constraintStart_toEndOf="@id/ivTelegram"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telegram"
            android:textColor="#FAFBFB"
            android:textSize="@dimen/_20sp"/>
        <ImageView
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingVertical="@dimen/_10dp"
        android:id="@+id/website"
        android:layout_marginTop="@dimen/_4dp"
        app:layout_constraintTop_toBottomOf="@id/telegram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ivWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/web"/>
        <TextView
            app:layout_constraintStart_toEndOf="@id/ivWebsite"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website"
            android:textColor="#FAFBFB"
            android:textSize="@dimen/_20sp"/>
        <ImageView
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingVertical="@dimen/_10dp"
        android:id="@+id/steam"
        android:layout_marginTop="@dimen/_4dp"
        app:layout_constraintTop_toBottomOf="@id/website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ivSteam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/steam1"/>
        <TextView
            app:layout_constraintStart_toEndOf="@id/ivSteam"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steam Group"
            android:textColor="#FAFBFB"
            android:textSize="@dimen/_20sp"/>
        <ImageView
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingVertical="@dimen/_10dp"
        android:id="@+id/tiktok"
        android:layout_marginTop="@dimen/_4dp"
        app:layout_constraintTop_toBottomOf="@id/steam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ivTiktok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tiktok"/>
        <TextView
            app:layout_constraintStart_toEndOf="@id/ivTiktok"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tik Tok"
            android:textColor="#FAFBFB"
            android:textSize="@dimen/_20sp"/>
        <ImageView
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>