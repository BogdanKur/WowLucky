<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_16dp"
    android:background="@color/black"
    tools:context=".LoginAndForgotPasswordFragment.EnterConfirmationCodeFragment">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/enter_confirmation_code"
        android:textColor="#F8FAFF"
        android:textSize="@dimen/_26sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvEnter6Digit"
        android:layout_marginTop="@dimen/_8dp"
        android:textColor="#F8FAFF"
        android:textSize="@dimen/_16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/enter_the_6_digit_login_code_we_sent_to_mariam_khachatryan_gmail_com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tvRequestANewOne"
        android:layout_marginTop="@dimen/_20dp"
        android:textColor="#AE88FF"
        android:textSize="@dimen/_16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/request_a_new_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEnter6Digit"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50dp"
        app:layout_constraintTop_toBottomOf="@id/tvRequestANewOne"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="@dimen/_28sp"
            android:gravity="center"
            android:maxLength="1"
            android:id="@+id/textInputEditText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textInputEditText2"
            android:background="@drawable/verify_code"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:nextFocusForward="@id/textInputEditText2"/>

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="@dimen/_28sp"
            android:gravity="center"
            android:maxLength="1"
            android:id="@+id/textInputEditText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/verify_code"
            app:layout_constraintEnd_toStartOf="@id/textInputEditText3"
            app:layout_constraintStart_toEndOf="@id/textInputEditText1"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:nextFocusForward="@id/textInputEditText3"/>
        <com.google.android.material.textfield.TextInputEditText
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="@dimen/_28sp"
            android:gravity="center"
            android:maxLength="1"
            android:id="@+id/textInputEditText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/verify_code"
            app:layout_constraintEnd_toStartOf="@id/line"
            app:layout_constraintStart_toEndOf="@id/textInputEditText2"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:nextFocusForward="@id/textInputEditText4"/>

        <View
            android:id="@+id/line"
            android:layout_width="16dp"
            android:layout_height="2dp"
            android:background="@drawable/line_7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textInputEditText4"
            app:layout_constraintStart_toEndOf="@id/textInputEditText3"
            app:layout_constraintTop_toTopOf="parent" />
        <com.google.android.material.textfield.TextInputEditText
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="@dimen/_28sp"
            android:gravity="center"
            android:maxLength="1"
            android:id="@+id/textInputEditText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/verify_code"
            app:layout_constraintEnd_toStartOf="@id/textInputEditText5"
            app:layout_constraintStart_toEndOf="@id/line"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:nextFocusForward="@id/textInputEditText5"/>
        <com.google.android.material.textfield.TextInputEditText
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="@dimen/_28sp"
            android:gravity="center"
            android:maxLength="1"
            android:id="@+id/textInputEditText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/verify_code"
            app:layout_constraintEnd_toStartOf="@id/textInputEditText6"
            app:layout_constraintStart_toEndOf="@id/textInputEditText4"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:nextFocusForward="@id/textInputEditText6"/>

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="@dimen/_28sp"
            android:gravity="center"
            android:maxLength="1"
            android:id="@+id/textInputEditText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/verify_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textInputEditText5"
            android:imeOptions="actionNext"
            android:singleLine="true"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llPassword"
        android:layout_marginTop="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/tvRequestANewOne"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <TextView
        android:layout_marginTop="@dimen/_20dp"
        android:textSize="@dimen/_16sp"
        android:textColor="#F8FAFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEnterPassword"
                android:inputType="textPassword"
                android:textColor="#F8FAFF"
                android:hint="@string/enter_new_password"
                android:textColorHint="#F8FAFF"
                android:textSize="@dimen/_16sp"
                android:paddingStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47dp"
                android:background="@drawable/input"/>
            <ImageButton
                android:layout_marginTop="@dimen/_8dp"
                android:id="@+id/btnPassEnterVisible"
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"
                android:layout_gravity="center|end"
                android:layout_marginEnd="@dimen/_24dp"
                android:background="@drawable/close_eye" />
        </FrameLayout>
    <TextView
        android:layout_marginTop="@dimen/_20dp"
        android:textSize="@dimen/_16sp"
        android:textColor="#F8FAFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_password"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRepeatPassword"
                android:inputType="textPassword"
                android:textColor="#F8FAFF"
                android:hint="@string/repeat_new_password"
                android:textColorHint="#F8FAFF"
                android:textSize="@dimen/_16sp"
                android:paddingStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47dp"
                android:background="@drawable/input"/>
            <ImageButton
                android:layout_marginTop="@dimen/_8dp"
                android:id="@+id/btnPassRepeatVisible"
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"
                android:layout_gravity="center|end"
                android:layout_marginEnd="@dimen/_24dp"
                android:background="@drawable/close_eye" />
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/frameLayout3"
        android:layout_marginBottom="@dimen/_30dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/ivContinue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/frame_62"/>
        <com.google.android.material.button.MaterialButton
            android:enabled="false"
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/continues"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sp"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>