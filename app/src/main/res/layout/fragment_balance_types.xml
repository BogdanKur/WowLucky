<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".screens.profile.BalanceTypesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="@dimen/_20dp"
        android:paddingBottom="@dimen/_30dp"
        android:paddingHorizontal="@dimen/_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/balance_types"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/tvBalanceTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balance_types"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/_36dp"
            android:id="@+id/cl1"
            app:layout_constraintTop_toBottomOf="@id/tvBalanceTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/balance"
                android:textColor="#F8FAFF"
                android:textSize="@dimen/_20sp"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:fontFamily="@font/agrandir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="232038"
                android:textColor="#F8FAFF"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_marginTop="@dimen/_10dp"
            android:id="@+id/view1"
            app:layout_constraintTop_toBottomOf="@id/cl1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#63F8FAFF"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/_10dp"
            android:id="@+id/cl2"
            app:layout_constraintTop_toBottomOf="@id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gaming_balance"
                android:textColor="#F8FAFF"
                android:textSize="@dimen/_20sp"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:fontFamily="@font/agrandir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1293"
                android:textColor="#F8FAFF"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_marginTop="@dimen/_10dp"
            android:id="@+id/view2"
            app:layout_constraintTop_toBottomOf="@id/cl2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#63F8FAFF"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/_10dp"
            android:id="@+id/cl3"
            app:layout_constraintTop_toBottomOf="@id/view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proxy_balance"
                android:textColor="#F8FAFF"
                android:textSize="@dimen/_20sp"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:fontFamily="@font/agrandir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="121300"
                android:textColor="#F8FAFF"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <FrameLayout
            app:layout_constraintTop_toBottomOf="@id/cl3"
            android:id="@+id/frameLayoutGun2"
            android:layout_marginTop="@dimen/_36dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_gradient_30dp_radius"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/ok"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>