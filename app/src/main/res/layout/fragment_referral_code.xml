<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/_15dp"
    tools:context=".game.ReferralCodeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_marginTop="@dimen/_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/referral"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_marginTop="@dimen/_20dp"
            android:id="@+id/tvGet50"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_24sp"
            android:text="@string/get_50_of_your_referrals_winnings"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_marginTop="@dimen/_10dp"
            android:id="@+id/tvGet50Opinion"
            app:layout_constraintTop_toBottomOf="@id/tvGet50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_14sp"
            android:text="@string/get_50_of_your_referrals_winnings_also_get_1_extra_life_in_each_game_if_you_have_active_referrals_in_the_game_just_invite_them_to_join_wow_lucky"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_marginTop="@dimen/_30dp"
            android:id="@+id/tvWorks"
            app:layout_constraintTop_toBottomOf="@id/tvGet50Opinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_24sp"
            android:text="@string/how_it_works"
            tools:ignore="MissingConstraints" />
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintTop_toBottomOf="@id/tvWorks"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="@dimen/_14dp"
                android:layout_height="@dimen/_14dp"
                android:src="@drawable/check"/>
            <TextView
                android:textSize="@dimen/_14sp"
                android:textColor="#F8FAFF"
                android:layout_marginStart="@dimen/_10dp"
                android:text="@string/share_your_promo_code_with_a_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintTop_toBottomOf="@id/ll1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="@dimen/_14dp"
                android:layout_height="@dimen/_14dp"
                android:src="@drawable/check"/>
            <TextView
                android:textSize="@dimen/_14sp"
                android:textColor="#F8FAFF"
                android:layout_marginStart="@dimen/_10dp"
                android:text="@string/friend_immediately_gains_1_life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintTop_toBottomOf="@id/ll2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="@dimen/_14dp"
                android:layout_height="@dimen/_14dp"
                android:src="@drawable/check"/>
            <TextView
                android:textSize="@dimen/_14sp"
                android:textColor="#F8FAFF"
                android:layout_marginStart="@dimen/_10dp"
                android:text="@string/you_get_half_the_winnings_from_the_each_friend_if_they_are_lucky_the_more_friends_the_more_chance_to_win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvJoin"
            android:layout_marginTop="@dimen/_10dp"
            android:textSize="@dimen/_14sp"
            android:textColor="#F8FAFF"
            app:layout_constraintTop_toBottomOf="@id/ll3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_invite_and_win_click_to_copy_and_share_with_friends"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tvPromocode"
            android:layout_marginTop="@dimen/_33dp"
            android:textSize="@dimen/_16sp"
            android:textColor="#F8FAFF"
            app:layout_constraintTop_toBottomOf="@id/tvJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/this_is_your_promocode"
            tools:ignore="MissingConstraints" />
        <FrameLayout
            android:layout_marginTop="@dimen/_10dp"
            android:id="@+id/code"
            app:layout_constraintTop_toBottomOf="@id/tvPromocode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input"
                android:textSize="@dimen/_16sp"
                android:textColor="#F8FAFF"
                android:paddingHorizontal="@dimen/_16dp"
                android:text="dhcjsf9dufis7868dsijc" />
            <ImageView
                android:id="@+id/ivCopy"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_gravity="end|center"
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"
                android:src="@drawable/copy"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/profile"
            android:layout_marginTop="@dimen/_30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/referral_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/code"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center"
            android:textSize="@dimen/_12sp"
            android:textColor="#F8FAFF"
            app:layout_constraintTop_toBottomOf="@id/profile"
            android:id="@+id/tvUsers"
            android:text="bluebear234, yellowmouse215, whiterabbit554 and hundreds of other users have already joined the program "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
        <LinearLayout
            android:id="@+id/ll4"
            android:layout_marginTop="@dimen/_35dp"
            app:layout_constraintTop_toBottomOf="@id/tvUsers"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <TextView
                android:textSize="@dimen/_24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/are_you_a_blogger"
                android:textColor="#AE88FF"/>
            <ImageView
                android:id="@+id/ivBlogger"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_gravity="bottom"
                android:background="@drawable/chevron_down"
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"/>
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/tvOpinion"
            android:textSize="@dimen/_16sp"
            android:textColor="#F8FAFF"
            android:text="@string/share_your_promo_code_with_a_friend_friend_immediately_gains_1_life_you_get_half_the_winnings_from_each_friend_if_they_are_lucky_the_more_friends_the_more_chance_to_win_join_invite_and_win_click_to_copy_and_share_with_friends"
            app:layout_constraintTop_toBottomOf="@id/ll4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOpinion"
            tools:ignore="MissingConstraints">

            <FrameLayout
                android:layout_width="@dimen/_174dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/winning_referrals_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="@dimen/_14dp"
                    android:text="@string/winning_referrals"
                    android:textColor="#88A9FF"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|bottom"
                    android:layout_margin="@dimen/_14dp"
                    android:text="2621"
                    android:textColor="#F8FAFF"
                    android:textSize="@dimen/_32sp" />
            </FrameLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="@dimen/_174dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/referral_code_bg_84" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="@string/active"
                        android:textColor="#88A9FF"
                        android:textSize="@dimen/_16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"
                        android:layout_margin="@dimen/_14dp"
                        android:text="2621"
                        android:textColor="#F8FAFF"
                        android:textSize="@dimen/_32sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/referral_code_bg_84" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="@string/active"
                        android:textColor="#88A9FF"
                        android:textSize="@dimen/_16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"
                        android:layout_margin="@dimen/_14dp"
                        android:text="2621"
                        android:textColor="#F8FAFF"
                        android:textSize="@dimen/_32sp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            app:layout_constraintTop_toBottomOf="@id/ll5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>