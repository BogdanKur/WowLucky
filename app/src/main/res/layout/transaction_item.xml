<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_margin="@dimen/_6dp"
    android:id="@+id/allView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/transaction_item_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_14dp"
    android:paddingHorizontal="@dimen/_20dp"
    android:paddingVertical="@dimen/_13dp"
    tools:ignore="MissingConstraints">
    <TextView
        android:id="@+id/tvGame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/_18sp"
        android:textColor="#F8FAFF"
        android:text="Game #25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tvWins"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_18sp"
        android:textColor="#88FFC6"
        android:text="Win 4/4 tours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <View
        android:id="@+id/view"
        android:layout_marginTop="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/tvWins"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#646464"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_marginStart="@dimen/_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:text="@string/numb"
        android:textColor="#F8FAFF"
        android:textSize="@dimen/_12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <TextView
        android:layout_marginStart="@dimen/_66dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:text="@string/player"
        android:textColor="#F8FAFF"
        android:textSize="@dimen/_12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />
    <TextView
        android:id="@+id/tvWin1"
        android:layout_marginEnd="@dimen/_25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:text="@string/win"
        android:textColor="#F8FAFF"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player1"
        android:background="@drawable/item_player_bg"
        android:padding="@dimen/_12dp"
        android:layout_marginHorizontal="@dimen/_5dp"
        android:layout_marginTop="@dimen/_15dp"
        app:layout_constraintTop_toBottomOf="@id/tvWin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNumbUser1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivIcon1"
            android:background="@drawable/ellipse1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvNumbUser1"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_marginStart="@dimen/_8dp"
            android:id="@+id/tvNameUser1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emma Roberts"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivIcon1"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_marginStart="@dimen/_8dp"
            android:id="@+id/tvCoins1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="349 coins"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player2"
        android:padding="@dimen/_12dp"
        android:layout_marginHorizontal="@dimen/_5dp"
        app:layout_constraintTop_toBottomOf="@id/player1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNumbUser2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivIcon2"
            android:background="@drawable/ellipse3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvNumbUser2"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_marginStart="@dimen/_8dp"
            android:id="@+id/tvNameUser2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="synopsus"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivIcon2"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_marginStart="@dimen/_8dp"
            android:id="@+id/tvCoins2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="349 coins"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player3"
        android:padding="@dimen/_12dp"
        android:layout_marginHorizontal="@dimen/_5dp"
        app:layout_constraintTop_toBottomOf="@id/player2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNumbUser3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivIcon3"
            android:background="@drawable/ellipse2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvNumbUser3"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_marginStart="@dimen/_8dp"
            android:id="@+id/tvNameUser3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr zero"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivIcon3"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_marginStart="@dimen/_8dp"
            android:id="@+id/tvCoins3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="349 coins"
            android:textColor="#F8FAFF"
            android:textSize="@dimen/_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view2"
        android:layout_marginTop="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/player3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#646464"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_marginStart="@dimen/_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:text="@string/you_win1"
        android:textColor="#F8FAFF"
        android:textSize="@dimen/_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2" />
    <TextView
        android:id="@+id/tvWinCoins"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:text="349 coins"
        android:textColor="#F8FAFF"
        android:textSize="@dimen/_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2" />
</androidx.constraintlayout.widget.ConstraintLayout>