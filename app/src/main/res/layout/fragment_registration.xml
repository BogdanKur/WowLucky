<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/_16dp"
    tools:context=".registrate.RegistrationActiveFragment">

    <ImageView
        android:id="@+id/ivLoot"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tvJoin"
        android:textColor="#F8FAFF"
        android:textSize="@dimen/_30sp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_it_s_all_yours"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLoot"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_marginTop="@dimen/_30dp"
        app:layout_constraintTop_toBottomOf="@id/tvJoin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_marginBottom="@dimen/_16dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_gradient_30dp_radius"/>
            <com.google.android.material.button.MaterialButton
                android:drawableLeft="@drawable/email_icon"
                android:paddingHorizontal="@dimen/_46dp"
                android:gravity="start"
                android:id="@+id/btnSignUpEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/sign_up_with_email"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_marginBottom="@dimen/_16dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_gradient_30dp_radius"/>
            <com.google.android.material.button.MaterialButton
                android:paddingHorizontal="@dimen/_40dp"
                android:drawableLeft="@drawable/google_icon"
                android:gravity="start"
                android:id="@+id/btnSingUpGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/sign_up_with_google"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sp"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:checked="true"
                android:theme="@style/Theme.AppCompat"
                android:layout_width="@dimen/_18dp"
                android:layout_height="@dimen/_18dp"
                android:button="@drawable/checkbox_registrate_style"/>
            <TextView
                android:layout_marginStart="@dimen/_10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F8FAFF"
                android:text="@string/by_registering_i_confirm_that_i_have_read_and_agree_to_general_terms_and_conditions_data_protection_policy_price_list"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>