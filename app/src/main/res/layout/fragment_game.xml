<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/allViewss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_15dp"
    android:background="@color/black"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_marginTop="@dimen/_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/game"
        android:textColor="#F8FAFF"
        android:textSize="@dimen/_26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tvGame21N"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/game_n_21_round_1"
        android:textColor="#F8FAFF"
        android:textSize="@dimen/_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        tools:ignore="MissingConstraints" />
    <TextView
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/tvChoose"
        android:layout_marginTop="@dimen/_2dp"
        android:layout_width="@dimen/_310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/choose_an_unpopular_picture"
        android:textColor="#F8FAFF"
        android:textSize="@dimen/_24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGame21N"
        tools:ignore="MissingConstraints" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_65"
        android:paddingVertical="@dimen/_6dp"
        android:paddingHorizontal="@dimen/_12dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/ivLive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/live"/>
        <TextView
            android:layout_marginStart="@dimen/_4dp"
            android:textSize="@dimen/_14sp"
            android:textColor="#F8FAFF"
            app:layout_constraintStart_toEndOf="@id/ivLive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01h : 03m : 12s"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clStarHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clLive"
        tools:ignore="MissingConstraints">
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_5dp"
            android:id="@+id/ivStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_3dp"
            android:id="@+id/tvStar"
            android:layout_marginStart="@dimen/_4dp"
            app:layout_constraintStart_toEndOf="@id/ivStar"
            android:text="4/8 balls"
            android:textSize="@dimen/_14sp"
            android:textColor="#F8FAFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginStart="@dimen/_10dp"
            app:layout_constraintStart_toEndOf="@id/tvStar"
            android:id="@+id/ivHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_3dp"
            android:textSize="@dimen/_14sp"
            android:id="@+id/tvHeart"
            android:layout_marginStart="@dimen/_4dp"
            app:layout_constraintStart_toEndOf="@id/ivHeart"
            android:text="4 lifes"
            android:textColor="#F8FAFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_3dp"
            android:textSize="@dimen/_14sp"
            android:id="@+id/tvCount"
            android:layout_marginStart="@dimen/_54dp"
            app:layout_constraintStart_toEndOf="@id/tvHeart"
            android:text="126"
            android:textColor="#88FFC6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_3dp"
            android:textSize="@dimen/_14sp"
            android:id="@+id/tvPlayers1"
            android:layout_marginStart="@dimen/_4dp"
            app:layout_constraintStart_toEndOf="@id/tvCount"
            android:text="@string/players"
            android:textColor="#F8FAFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/clStarHeart"
        android:id="@+id/sl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                android:layout_marginTop="@dimen/_34dp"
                android:layout_marginBottom="@dimen/_280dp"
                android:id="@+id/rvGames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

